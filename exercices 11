package listadeexercicio4;
import java.util.Scanner;

public class Main {
// nome da classe
// lista de métodos
    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
    // TODO code application logic here
    String nomedovendedor;
    float salariofixo;
    float totalvendas;
    double salariofinal;
    double comissao;
    
    
    Scanner leitorScanner = new Scanner(System.in);
    
    System.out.println("Digite o nome do vendedor: ");
    nomedovendedor = leitorScanner.nextLine();
    System.out.println("Digite o salario fixo: ");
    salariofixo = leitorScanner.nextFloat();
    System.out.println("Digite o total de vendas: ");
    totalvendas = leitorScanner.nextFloat();

    
    
    comissao = (totalvendas * 0.15);
    
    salariofinal = (comissao + salariofixo);

    
    System.out.println("nomedovendedor é" +nomedovendedor);    
    System.out.println("salariofixo é:" + salariofixo);   
    System.out.println("salariofinal é:" + salariofinal);   
    }
}
